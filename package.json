{
  "name": "svelte-gesture",
  "version": "0.1.2",
  "packageManager": "pnpm@7.18.0",
  "description": "ðŸ‘‡ Bread n butter utility for component-tied mouse/touch gestures in Svelte.",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/svelte-gesture#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/svelte-gesture.git"
  },
  "bugs": "https://github.com/wobsoriano/svelte-gesture/issues",
  "keywords": [
    "svelte",
    "directive",
    "wheel",
    "drag",
    "scroll",
    "zoom",
    "gestures",
    "pinch"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./globals": "./globals.d.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "update-deps": "taze -w && pnpm i",
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "pnpm build-fast --dts-resolve",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@use-gesture/vanilla": "^10.2.23"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "bumpp": "^8.2.1",
    "eslint": "^8.29.0",
    "pnpm": "^7.18.1",
    "taze": "^0.8.4",
    "tsup": "6.0.1",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "extends": "@antfu"
  }
}
